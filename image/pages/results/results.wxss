/* pages/results/results.wxss */
.page {
  padding: 0rpx;
}
.page-head {
  text-align: center;
}
.page-title {
  padding-top: 400rpx;
  font-size: 90rpx;
  font-weight: 400;
  line-height: 100rpx;
  margin-bottom: 100rpx;

}
.page-score {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding-top:40rpx;
  padding-bottom:40rpx;
}
.score-num {
  font-size:100rpx;
}
.page-footer {
  margin-top:60rpx;
  text-align: center;
}
.wrong-btns {
  display:flex;
  align-items:center;
  justify-content:center;
  margin-top: 60rpx;
}
.wrong-btn {
  background-image: radial-gradient( #78bbf1,#4086fe);
  border-radius: 140rpx;
  width: 50%;
  margin: 0 auto;
  color: #fff !important;
  font-size: 50rpx;
  font-weight: 500;
  line-height: 90rpx;
  border: 6rpx solid #fff;
margin-top: 100rpx;

}
.score-remark{
  font-size: 40rpx;
  width: 60%;
  margin: 0 auto;
  display: block;
  text-align: left;
  font-weight: 300;
}
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
page{
  padding-top: 0rpx;
}